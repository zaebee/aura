# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aura_db

# LLM Configuration
# Choose one strategy:
# - "rule" = No LLM, rule-based pricing (no API key needed)
# - "mistral/mistral-large-latest" = Mistral AI (requires MISTRAL_API_KEY)
# - "openai/gpt-4o" = OpenAI (requires OPENAI_API_KEY)
# - "anthropic/claude-3-5-sonnet-20241022" = Claude (requires ANTHROPIC_API_KEY)
# - "ollama/mistral" = Local Ollama (no API key, assumes Ollama running)
LLM_MODEL=rule
MISTRAL_API_KEY=

# OpenTelemetry (Observability)
OTEL_SERVICE_NAME=aura-core
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Prometheus Monitoring
PROMETHEUS_URL=http://localhost:9090

# Crypto Payment Configuration
# Set to true to enable crypto payment locks on accepted offers
CRYPTO_ENABLED=false

# Which blockchain provider to use
CRYPTO_PROVIDER=solana

# Which currency to accept for payments
CRYPTO_CURRENCY=SOL  # SOL or USDC

# Solana Configuration (only needed if CRYPTO_ENABLED=true)
# Generate a keypair with: solana-keygen new
# Export with: solana-keygen export ~/.config/solana/id.json | base64
SOLANA_PRIVATE_KEY=

# Solana RPC endpoint
# - Devnet (for testing): https://api.devnet.solana.com
# - Testnet: https://api.testnet.solana.com
# - Mainnet: https://api.mainnet-beta.solana.com
# - Or use a dedicated RPC provider (Helius, QuickNode, Alchemy)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network name
SOLANA_NETWORK=devnet  # devnet, testnet, mainnet-beta

# USDC token mint address (mainnet default)
SOLANA_USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# How long deals remain valid before expiring (seconds)
DEAL_TTL_SECONDS=3600  # 1 hour

# API Gateway Configuration
CORE_SERVICE_HOST=localhost:50051
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
